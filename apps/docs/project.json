{
    "name": "shuttl-docs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/docs/docs",
    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "uv run mkdocs serve",
                "cwd": "apps/docs"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "uv run mkdocs build",
                "cwd": "apps/docs"
            },
            "outputs": ["{projectRoot}/site"]
        },
        "sync": {
            "executor": "nx:run-commands",
            "options": {
                "command": "uv sync",
                "cwd": "apps/docs"
            }
        }
    },
    "tags": ["type:docs", "scope:public"]
}

