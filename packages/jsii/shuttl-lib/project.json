{
    "name": "@shuttl-io/core",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/jsii/shuttl-lib",
    "targets": {
        "nx-release-publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bash ./publish.sh",
                "cwd": "{projectRoot}"
            },
            "dependsOn": [
                "package"
            ]
        },
        "add": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm add",
                "cwd": "{projectRoot}"
            }
        },
        
        "test:integration": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/jsii/shuttl-lib/integration-tests/jest.config.js",
                "passWithNoTests": true,
                "runInBand": true
            },
            "dependsOn": ["build", "package"]
        }
    }
}