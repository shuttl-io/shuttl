{
  "name": "@shuttl-io/core",
  "version": "0.1.5",
  "description": "The JSII library for Shuttl AI models",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test:integration": "jest --config integration-tests/jest.config.js --runInBand",
    "build": "jsii",
    "build:watch": "jsii --watch",
    "package": "jsii-pacmak",
    "tsc": "tsc"
  },
  "keywords": [],
  "author": {
    "name": "Shuttl AI",
    "email": "developers@shuttl.io",
    "url": "https://www.shuttl.io"
  },
  "repository": {
    "url": "https://github.com/shuttl-io/shuttl_ai.git"
  },
  "license": "ISC",
  "stability": "stable",
  "nx": {
    "targets": {
      "package": {
        "options": {
          "cwd": "{projectRoot}"
        },
        "dependsOn": [
          "build"
        ]
      },
      "test:integration": {
        "dependsOn": [
          "package"
        ]
      },
      "build": {
        "dependsOn": [
          "test"
        ]
      }
    }
  },
  "jsii": {
    "versionFormat": "full",
    "outdir": "dist-jsii",
    "targets": {
      "java": {
        "package": "io.shuttl.module.core",
        "maven": {
          "groupId": "io.shuttl.module",
          "artifactId": "core"
        }
      },
      "python": {
        "distName": "shuttl.core",
        "module": "shuttl.core"
      },
      "go": {
        "moduleName": "github.com/shuttl-io/shuttl",
        "packageName": "core"
      },
      "dotnet": {
        "namespace": "shuttl.core",
        "packageId": "shuttl.core"
      }
    },
    "tsc": {
      "outDir": "dist/",
      "rootDir": "src/",
      "excludeTypescript": [
        "dist/**/*.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^25.0.3",
    "jest": "^29.7.0",
    "jsii": "^5.9.14",
    "jsii-pacmak": "^1.120.0",
    "ts-jest": "^29.1.2"
  },
  "bundledDependencies": [
    "zod"
  ],
  "dependencies": {
    "zod": "^4.2.1"
  }
}
